{
	"name": "anotes",
	"version": "1.0.0",
	"description": "Apple Notes CLI for AI agents",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/longas/anotes.git"
	},
	"homepage": "https://github.com/longas/anotes#readme",
	"bugs": "https://github.com/longas/anotes/issues",
	"keywords": [
		"apple-notes",
		"cli",
		"macos",
		"ai-agent",
		"notes"
	],
	"engines": {
		"node": ">=24"
	},
	"os": [
		"darwin"
	],
	"type": "module",
	"bin": {
		"anotes": "./bin/anotes.js"
	},
	"files": [
		"bin",
		"dist"
	],
	"scripts": {
		"build": "tsc",
		"prepublishOnly": "npm run build",
		"fix": "biome check --fix",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"branches": [
			"main"
		]
	},
	"dependencies": {
		"commander": "^14.0.3",
		"marked": "^17.0.3",
		"turndown": "^7.2.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.2",
		"@tsconfig/node24": "^24.0.4",
		"@types/node": "^24.10.13",
		"@types/turndown": "^5.0.6",
		"lefthook": "^2.1.1",
		"semantic-release": "^25.0.3",
		"typescript": "^5.9.3"
	}
}
